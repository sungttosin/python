import random

s=0
c=0
a=[]

while len(a)<3:
    r=str(random.randint(0,9))
    if not (r in a):
        a.append(r)
print(a)

while s<3:
    s=0
    b=0
    o=0
    r=str(input("3개의 숫자 입력"))

    for i in range(0,3):
        for x in range(0,3):
            if r[i]==a[x] and i==x:
                s+=1
            elif r[i]==a[x] and i!=x:
                b+=1
    o=3-(s+b)
    print(f'스트라이크{s},볼{b},아웃{o}')
    c+=1
print('정답 시도횟수',c)


